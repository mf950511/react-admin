.icon {
  width: 1em;
  height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
}
html {
  line-height: 1.15;
}
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
.login-wrapper {
  height: 100%;
  width: 100%;
  background: #2d3a4b;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  overflow: hidden;
}
.login-wrapper .form-title {
  font-size: 26px;
  color: #fff;
  margin: 0 auto 40px;
  text-align: center;
}
.login-wrapper .login-form {
  padding: 160px 35px 0;
  border-radius: 5px;
  width: 520px;
}
.login-wrapper .login-form .ant-input-affix-wrapper {
  background: rgba(0, 0, 0, 0.1);
  border: 1px solid hsla(0, 0%, 100%, 0.1);
  height: 50px;
}
.login-wrapper .login-form .ant-input-affix-wrapper .site-form-item-icon {
  color: #889aa4;
  font-size: 18px;
}
.login-wrapper .login-form .ant-input-affix-wrapper input {
  background: transparent;
  color: #fff;
}
.login-wrapper .login-form .login-form-button {
  width: 100%;
  height: 40px;
}
.login-wrapper .login-form .tip {
  color: #fff;
  margin-bottom: 5px;
  font-size: 14px;
}
